{
  "name": "@datadog/native-iast-rewriter",
  "version": "0.0.1",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "iast-rewriter",
    "triples": {
      "defaults": false,
      "additional": [
        "x86_64-unknown-linux-gnu",
        "x86_64-unknown-linux-musl",
        "x86_64-pc-windows-msvc"
      ]
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@napi-rs/cli": "^2.0.0",
    "@swc-node/register": "^1.4.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "dotenv-cli": "^5.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-prettier": "^0.0.0-empty",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "sorcery": "^0.10.0",
    "source-map": "^0.7.3",
    "tap-junit": "^5.0.1",
    "tmp": "^0.2.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "artifacts:prepare": "node ./scripts/artifacts.mjs",
    "artifacts:prepublish": "napi prepublish --skip-gh-release",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "build:linux": "napi build --target x86_64-unknown-linux-gnu --platform --release",
    "build:alpine": "napi build --target x86_64-unknown-linux-musl --platform --release",
    "build:windows": "napi build --target x86_64-pc-windows-msvc --platform --release",
    "build:darwin": "napi build --target x86_64-apple-darwin --platform --release",
    "buildAndTest:debug": "npm run build && npm run test",
    "buildAndTest:linux": "npm run build:linux && npm run test",
    "buildAndTest:alpine": "npm run build:alpine && npm run test",
    "buildAndTest:windows": "npm run build:windows && npm run test",
    "buildAndTest:darwin": "npm run build:darwin && npm run test",
    "format": "run-p format:prettier format:rs",
    "format:prettier": "prettier . -w",
    "format:rs": "cargo fmt",
    "lint": "eslint . -c ./.eslintrc.yml",
    "prepublishOnly": "run-p artifacts:prepare artifacts:prepublish",
    "version": "napi version",
    "test": "dotenv jest",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "prettier --write",
      "eslint -c .eslintrc.yml --fix"
    ],
    "*.@(yml|yaml)": [
      "prettier --parser yaml --write"
    ],
    "*.md": [
      "prettier --parser markdown --write"
    ],
    "*.json": [
      "prettier --parser json --write"
    ],
    "*.rs": [
      "rustfmt"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "optionalDependencies": {
    "@datadog/native-iast-rewriter-linux-x64-gnu": "0.0.1",
    "@datadog/native-iast-rewriter-linux-x64-musl": "0.0.1",
    "@datadog/native-iast-rewriter-win32-x64-msvc": "0.0.1"
  }
}
